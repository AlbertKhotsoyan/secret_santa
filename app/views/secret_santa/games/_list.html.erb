<% if @games.nil? || @games.count.zero? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <table class="list">
    <thead>
    <tr>
      <th><%= l(:field_subject) %></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game_actions(game) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
